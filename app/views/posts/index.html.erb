<p id="notice"><%= notice %></p>

<h1>Administrator Inputs</h1>

<table>
  <thead>
    <tr>
      <th>Creator ID: </th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user_id %></td>
        <td><%= post.first_name %></td>
        <td><%= post.last_name %></td>
        <td><%= post.email %></td>
        <td><%= post.password %></td>
        <td><%= link_to 'Show', post if policy(post).show?%></td>
        <td><%= link_to 'Edit', edit_post_path(post) if policy(post).edit?%></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } if policy(post).destroy?%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if policy(Post).new? %>
<%= link_to 'New Post', new_post_path %>
<% end %>